@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Welcome to CombatGameSite</h1>
    <p>Create and battle with your custom teams!</p>
</div>

<h1>Battle Teams</h1>

@if (TempData["Message"] !=null)
{
    <p class="alert alert-success">@TempData["Message"]</p>
}

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="team1Id">Select Team 1</label>
        <select id="team1Id" name="team1Id" class="form-control">
            <option value="">-- Select Team 1 --</option>
            @foreach (var team in(IEnumerable<Team>)ViewBag.Teams)
            {
                <option value="@team.Id">@team.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="team2Id">Select Team 2</label>
        <select id="team2Id" name="team2Id" class="form-control">
            <option value="">-- Select Team 2 --</option>
            @foreach (var team in (IEnumerable<Team>)ViewBag.Teams)
            {
                <option value="@team.Id">@team.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Battle</button>
</form>