@model CombatGameSite.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<h2>Teams</h2>

@if (Model.Teams == null || !Model.Teams.Any())
{
    <p>No teams available.</p>
}
else
{
    <p>Teams count: @Model.Teams.Count</p>
}

<hr />

<h2>Battle History</h2>
@if (Model.Battles != null && Model.Battles.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Team 1</th>
                <th>Team 2</th>
                <th>Winning Team</th>
                <th>Battle Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var battle in Model.Battles)
            {
                <tr>
                    <td>@battle.Team1.Name</td>
                    <td>@battle.Team2.Name</td>
                    <td>@battle.WinningTeam?.Name</td>
                    <td>@battle.BattleDate.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No battle history available.</p>
}
