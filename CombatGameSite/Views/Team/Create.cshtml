@model CombatGameSite.Models.Team

@{
    ViewData["Title"] = "Create Team";
}

<h2>Create a New Team</h2>

<form method="post">
    @csrf

    <!-- Team Name Field -->
    <div class="form-group">
        <label for="name">Team Name:</label>
        <input type="text" class="form-control" id="name" name="name" value="@Model.Name" />
    </div>

    <!-- User Selection Dropdown -->
    <div class="form-group">
        <label for="userId">User:</label>
        <select class="form-control" id="userId" name="userId">
            @foreach (var user in ViewBag.Users as List<CombatGameSite.Models.User>)
            {
                <option value="@user.Id">@user.Username</option>
            }
        </select>
    </div>

    <!-- Characters Selection Dropdown -->
    <div class="form-group">
        <label for="characters">Characters:</label>
        <select class="form-control" multiple id="characters" name="characterIds">
            @foreach (var character in ViewBag.Characters as List<CombatGameSite.Models.Character>)
            {
                <option value="@character.Id">@character.Name</option>
            }
        </select>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Create Team</button>
</form>
