@{
    ViewData["Title"] = "Create Team";
}

<h1>Create a New Team</h1>

<form asp-action="Create" method="post">
    <div c;asp-validation-summary="form-group">
        <label for="name">Team Name</label>
        <input type="text" id="name" name="name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Select Characters (max 5)</label>
        <div>
            @foreach (var character in (IEnumerable<Character>)ViewBag.Characters)
            {
                <div>
                    <input type="checkbox" name="characterIds" value="@character.Id" />
                    <label>@character.Name (Stats: Str @character.Strength, Agi @character.Agility, Int @character.Intelligence)</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create Team</button>
</form>